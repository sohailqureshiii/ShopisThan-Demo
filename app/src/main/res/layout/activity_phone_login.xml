<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity">

    <ImageView
        android:id="@+id/backlogin"
        android:layout_marginStart="13dp"
        android:layout_marginTop="15dp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"/>

    <include layout="@layout/custom_toolbar_phonelog"
        android:id="@+id/mytoolbarhome"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:layout_below="@+id/mytoolbarhome"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mytoolbarhome"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/actor"
        android:gravity="center"
        android:text="Get started with Shopisthan"
        android:textColor="#000"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/metrophobic"
        android:gravity="center"
        android:text="Enter  your phone number to  use  Shopisthan and enjoy your Shopping"
        android:textColor="#000"
        android:textSize="15dp" />

    <com.hbb20.CountryCodePicker
        android:layout_below="@id/textView9"
        android:id="@+id/ccp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="90dp"
        android:gravity="center" />

    <EditText
        android:id="@+id/t1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView9"
        android:layout_marginStart="150dp"
        android:layout_marginTop="90dp"
        android:drawableLeft="@drawable/ic_baseline_phone_24"
        android:gravity="center"
        android:hint="Enter Mobile"
        android:inputType="number"
        android:textColorHint="#ffffff"
        android:textSize="20sp" />

    <Button

        android:id="@+id/b1"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="46dp"
        android:layout_marginEnd="21dp"
        android:text="Get OTP"
        android:textColor="#ffffff" />

    <RelativeLayout
        android:layout_marginStart="25dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="-4dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:layout_below="@+id/ccp"/>




</RelativeLayout>